{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.tauri.drawnix",
  "build": {
    "frontendDist": "../dist/apps/web",
    "devUrl": "http://localhost:7200",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Drawnix",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}